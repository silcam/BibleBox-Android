<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#000"
    >

    <TextView
        android:id="@+id/IpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Put IP Address Here"
        android:textSize="40sp"
        />

    <Button
        android:id="@+id/refreshWifiButton"
        android:onClick="refreshWifiInfoButtonPress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/IpTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Refresh Wifi Info"
        android:textSize="40sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="12dp"
        />

    <Button
        android:onClick="wifiToggleButtonPress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/refreshWifiButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Turn on Hotspot"
        android:textSize="40sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="12dp"
        />



</android.support.constraint.ConstraintLayout>